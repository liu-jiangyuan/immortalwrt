#
# Target
#
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_bt_r320=y
CONFIG_TARGET_BOARD="mediatek"
CONFIG_TARGET_SUBTARGET="filogic"
CONFIG_TARGET_PROFILE="DEVICE_bt_r320"
CONFIG_TARGET_ARCH_PACKAGES="aarch64_cortex-a53"
CONFIG_CPU_TYPE="cortex-a53"
CONFIG_DEFAULT_TARGET_OPTIMIZATION="-Os -pipe -mcpu=cortex-a53"

#
# Image / Filesystem（官方默认）
#
# CONFIG_TARGET_EXT4_ROOTFS is not set
CONFIG_TARGET_SQUASHFS=y

#
# Base system（24.10 必须显式选）
#
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_procd=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_ubusd=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_opkg=y

#
# Kernel helpers
#
CONFIG_PACKAGE_kmod-gpio-button-hotplug=y
CONFIG_PACKAGE_kmod-leds-gpio=y
CONFIG_PACKAGE_kmod-nft-core=y

#
# Network base
#
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_nftables=y

#
# SSH（默认管理入口）
#
CONFIG_PACKAGE_dropbear=y

#
# Web server（LuCI 后端）
#
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y

#
# LuCI（官方 24.10 推荐拆分方式）
#
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-app-firewall=y

#
# HTTPS（和你现在一致，没问题）
#
CONFIG_PACKAGE_luci-ssl-openssl=y
CONFIG_PACKAGE_libustream-openssl20201210=y
# CONFIG_PACKAGE_libustream-mbedtls20201210 is not set

#
# Wireless（Filogic 官方常规）
#
CONFIG_PACKAGE_wpad-basic-mbedtls=y
# 如果你要 WPA3 / 802.11r，可以换成：
# CONFIG_PACKAGE_wpad-openssl=y

#
# Utilities（官方一般会带的）
#
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_urngd=y

#
# Your additions（这些都没问题）
#
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y
